#!/bin/sh
set -e
set -x

cat >index.html <<HTML
<!doctype html>
<html lang=en-US>
  <head>
    <meta charset=UTF-8>
    <meta name=viewport content="width=device-width, initial-scale=1">
    <title>Fractional Inch</title>
    <link rel=stylesheet href=styles.css>
  </head>
  <body>
  <main>
$(npx kemarkdown < table.md)
  </main>
  </body>
</html>
HTML

tidy \
  --custom-tags blocklevel \
  --doctype omit \
  --indent-spaces 2 \
  --tidy-mark no \
  -indent \
  -modify \
  -wrap 0 \
  -quiet \
  ./index.html
